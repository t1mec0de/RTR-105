#include <stdio.h>

int main()
{
long int a,c,b,ll,n;
printf("Please enter one decimal number: ");
scanf("%ld",&n);
printf("Please select data type (char-c; int-b; long long-ll)\n: ");
scanf("%ld",&a);

int i,factorial;
factorial=1;
if(a=c, n>=1, n<=12)
{
printf("Sorry, factorial can't be calculated with 'char' data type\n");
}
if(a=ll, n>=1, n<=12)
{
printf("Sorry, factorial can't be calculated with 'long long' data type\n");
}
if(a=b, n>=1, n<=12)
{
for(i=1; i<=n; i++)
{
factorial = factorial * i;
}
printf("Factorial from the entered number (%ld) is : %d",n,factorial);
}

if(a=c, n>=13)
{
printf("Sorry, factorial can't be calculated with 'char' data type\n");
}
if(a=ll, n>=13)
{
printf("Sorry, factorial can't be calculated with 'long long' data type\n");
}
if(a=b, n>=13)
{
for(i=1; n>=13; i++)
{
printf("Factor from the entered number: The factorial has no value\n");
break;
}
}
return 0;
}n
